@model CreateCoverTypeDto

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-4">
            <h2 class="text-primary">Create Cover Type</h2>
            <hr />
        </div>

    </div>
    <!--To Show All Erorr Valid -->
    <div asp-validation-summary="All"></div>
    <div class="mb-3">
        <label asp-for="CoverName"></label>
        <input asp-for="CoverName" class="form-control" />
        <!--Valid message-->
        <span asp-validation-for="CoverName" class="text-danger"></span>

    </div>

    <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
    <a asp-controller="CoverType" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

