@model List<CoverTypeViewModel>

@{
    ViewData["Title"] = "Index";
}


<div class="container pt-4">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary"> CoverType List</h2>
        </div>
        <div class="col-6">

            <a class="btn btn-primary" asp-controller="CoverType" asp-action="Create"><i class="bi bi-plus-circle"></i> &nbsp;Create Cover Type Item </a>
        </div>
    </div>

</div>




@if (Model.Any())
{

    <table class="table table-hover mt-4">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Cover Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.CoverName</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="CoverType" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>Edit</a>
                            <a asp-controller="CoverType" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-2"><i class="bi bi-trash-fill"></i>Delete</a>

                        </div>

                    </td>
                </tr>
            }


        </tbody>
    </table>

}
else
{
    <div class="alert alert-warning">No Data Found!</div>
}

