@model List<CategoryViewModel>

@{ 
    ViewData["Title"] = "Index";

}


<div class="container pt-4">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary"> Category List</h2>
        </div>
        <div class="col-6">
       
            <a class="btn btn-primary" asp-controller="Category" asp-action="Create"><i class="bi bi-plus-circle"></i> &nbsp;Create Category</a>
        </div>
    </div>

</div>




@if (Model.Any())
{

<table class="table table-hover mt-4">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Dispaly Order</th>
            <th scope="col">Create Time</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var cat in Model)
        {
            <tr >
                <th scope="row">@cat.Id</th>
                <td>@cat.Name</td>
                <td>@cat.DisplayOrder</td>
                <td>@cat.CratedDateTime</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@cat.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>Edit</a>
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@cat.Id" class="btn btn-danger mx-2"><i class="bi bi-trash-fill"></i>Delete</a>

                    </div>

                </td>
            </tr>
        }


    </tbody>
</table>

}
else
{
<div class="alert alert-warning">No Data Found!</div>
}

