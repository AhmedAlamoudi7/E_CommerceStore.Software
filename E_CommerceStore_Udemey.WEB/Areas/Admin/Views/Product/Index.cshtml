@model List<ProductViewModel>

@{ 
    ViewData["Title"] = "Index";

}
<div class="container pt-4">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary"> Product List</h2>
        </div>
        <div class="col-6">     
            <a class="btn btn-primary"  asp-controller="Product" asp-action="Create"><i class="bi bi-plus-circle"></i> &nbsp;Create Product Item!</a>
        </div>
    </div>
</div>

@if (Model.Any())
{

<table class="table table-hover mt-4">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <td>Title</td>
            <td>Description</td>
            <td>ISBN</td>
            <td>Author</td>
            <td>ListPrice</td>
            <td>Price</td>
            <td>Price100</td>
            <td>ImageUrl</td>
            <td>Category Name</td>
            <td>CoverName</td>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var product in Model)
        {
        <tr>
            <th scope="row">@product.Id</th>
            <td>@product.Title</td>
            <td>@product.Description</td>
            <td>@product.ISBN</td>
            <td>@product.Author</td>
            <td>@product.ListPrice</td>
            <td>@product.Price</td>
            <td>@product.Price100</td>
            <td>@product.ImageUrl</td>
            <td>@product.CategoryVMName</td>
            <td>@product.CoverTypeVMName</td>


            <td>
                <div class="w-75 btn-group" role="group">
                    <a asp-controller="Product" asp-action="Edit" asp-route-id="@product.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i></a>
                    <a asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger mx-2"><i class="bi bi-trash-fill"></i></a>
                </div>
            </td>
        </tr>
        }


    </tbody>
</table>

}else
{
<div class="alert alert-warning">No Data Found!</div>
}

